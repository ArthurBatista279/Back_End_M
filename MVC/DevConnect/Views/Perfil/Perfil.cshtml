<link rel="stylesheet" href="~/css/global.css">
<link rel="stylesheet" href="~/css/perfil.css">

<!-- Header -->
<header id="cabecalho">
    <nav>
        <!-- Logo -->
        <a href="perfil.html">
            <img id="logo-desktop" src="/assets/images/dEVCONnECTV3.svg" alt="Logo DevConnect">
        </a>

        <!-- Ícones -->
        <div class="cabecalho-acoes">
            <a href="perfil.html">
                <img src="~/images/icone-casa-azul.svg" alt="Home">
            </a>
            <a href="#">
                <img src="~/images/icone-coracao-azul.svg" alt="Curtidas">
            </a>
            <a href="#">
                <img id="foto-perfil-nav" src="~/images/Arthurbr-yt.png" alt="Perfil">
            </a>
        </div>
    </nav>
</header>

<!-- Main -->
<main>
    <section id="perfil">
        <!-- Foto + Nome -->
        <div class="perfil-topo">
            <img id="foto-perfil" src="~/images/Arthurbr-yt.png" alt="Foto do usuário">

            <div class="perfil-info">
                <h2>Arthurbr-YT</h2>

                <div class="perfil-estatisticas">
                    <span>218 publicações</span>
                    <span>2 seguindo</span>
                    <span>78k seguidores</span>
                </div>

                <div class="acoes-perfil">
                    <span>Arthurbr-YT</span>
                    <a href="#">Editar Perfil</a>
                    <a href="/pages/TelaLogin.html">Sair</a>
                </div>
            </div>
        </div>

        <!-- Publicações -->
        <h3 class="titulo-publicacoes">
            <img src="~/images/icone-galeria-preto.svg" alt="Ícone de grid"> PUBLICAÇÕES
        </h3>

        <div class="publicacoes">
            <!-- Card 1 -->
            <article class="card-publi">
                <header>
                    <img src="~/images/Arthurbr-yt.png" alt="Foto do autor">
                    <span>Arthurbr-YT</span>
                </header>
                <p>TEXTO</p>
                <footer>
                    <p>
                        <img src="~/images/icone-coracao-azul.svg" alt="Curtidas" class="icone">
                        <img src="~/images/icone-comentario-preto.svg" alt="Comentários" class="icone">
                    </p>
                    <p>2349 curtidas</p>
                    <a href="#">Ver todos os comentários...</a>
                </footer>
            </article>

            <!-- Card 2 -->
            <article class="card-publi">
                <header>
                    <img src="~/images/Arthurbr-yt.png" alt="Foto do autor">
                    <span>Arthurbr-YT</span>
                </header>
                <p>Olha esse GIF que daora!</p>
                <div class="post">
                    <img class="post-img" src="~/images/transferir.gif" alt="GIF legal">
                </div>
                <footer>
                    <p>
                        <img src="~/images/icone-coracao-azul.svg" alt="Curtidas" class="icone">
                        <img src="~/images/icone-comentario-preto.svg" alt="Comentários" class="icone">
                    </p>
                    <p>9354 curtidas</p>
                    <a href="#">Ver todos os comentários...</a>
                </footer>
            </article>
        </div>
    </section>
</main>